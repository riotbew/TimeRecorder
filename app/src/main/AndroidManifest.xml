<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jim.recorder">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.view.MainActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask">


        </activity>
        <activity android:name=".SplashActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.view.DayFixActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"/>
        <activity android:name=".ProfitCalcActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".ui.view.EventManagerActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".ui.view.AddEventActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.view.LeftMenuActivity"
            android:theme="@style/Anim_fade"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="TIME_RECORDER_MENUACTIVITY"/>
            </intent-filter>
        </activity>
    </application>

</manifest>