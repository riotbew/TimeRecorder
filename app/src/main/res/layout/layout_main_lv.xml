<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/time_title"
        android:layout_width="0dp"
        app:layout_widthPercent="20%"
        android:paddingRight="5dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_mon"
            android:text="hehexiao"
            android:textColor="@color/main_left_title"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_date"
            android:textColor="@color/main_left_title"
            android:textSize="26sp"
            android:gravity="right"
            android:text="20"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_left_title"
            android:id="@+id/main_day"
            android:textSize="12sp"
            android:text="周五"/>
        <View
            android:id="@+id/day_divider"
            android:visibility="gone"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/now_divider"/>

    </LinearLayout>

    <LinearLayout
        android:layout_toRightOf="@+id/time_title"
        android:orientation="vertical"
        android:id="@+id/day_content"
        app:layout_widthPercent="80%"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:clickable="false">
    </LinearLayout>

</android.support.percent.PercentRelativeLayout>